{
    "id": "org.kde.PlatformTheme.QGnomePlatform",
    "branch": "5.15-21.08",
    "runtime": "org.kde.Platform",
    "build-extension": true,
    "sdk": "org.kde.Sdk",
    "runtime-version": "5.15-21.08",
    "appstream-compose": false,
    "separate-locales": false,
    "modules": [
        {
            "name": "Adwaita-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_INSTALL_PREFIX=/usr/share/runtime/lib/plugins/QGnomePlatform"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FedoraQt/adwaita-qt/archive/1.4.1.tar.gz",
                    "sha256": "834f2caaf031306b63b31ad6fec489482feda35e9aa260f205cbb976cde97b1d"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@add_subdirectory(style)@#add_subdirectory(style)@' src/CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "qgnomeplatform",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_INSTALL_PREFIX=/usr/share/runtime/lib/plugins/QGnomePlatform",
                            "-DQT_PLUGINS_DIR=/usr/share/runtime/lib/plugins/QGnomePlatform",
                            "-DDISABLE_DECORATION_SUPPORT=true"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FedoraQt/QGnomePlatform/archive/refs/tags/0.8.4.tar.gz",
                    "sha256": "c648331f47b095d90594fc986a6c0bc885b846e0e9f5c10b6a1ba6a58d004686"
                },
                {
                    "type": "patch",
                    "path": "qgnomeplatform-adwaita-include-dirs.patch"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.kde.PlatformTheme.QGnomePlatform.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.kde.PlatformTheme.QGnomePlatform --prefix=${FLATPAK_DEST} --origin=flatpak org.kde.PlatformTheme.QGnomePlatform"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.kde.PlatformTheme.QGnomePlatform.appdata.xml"
                }
            ]
        }
    ]
}
