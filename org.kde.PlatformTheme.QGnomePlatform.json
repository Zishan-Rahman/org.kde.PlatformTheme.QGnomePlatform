{
    "id": "org.kde.PlatformTheme.QGnomePlatform",
    "branch": "5.15",
    "runtime": "org.kde.Platform",
    "build-extension": true,
    "sdk": "org.kde.Sdk",
    "runtime-version": "5.15",
    "appstream-compose": false,
    "separate-locales": false,
    "modules": [
        {
            "name": "Adwaita-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_INSTALL_PREFIX=/usr/share/runtime/lib/plugins/QGnomePlatform"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FedoraQt/adwaita-qt/archive/1.3.1.tar.gz",
                    "sha256": "4566061d65773ff9947775a30d92fa004816c3ff5d1357c83de63b3772bc5f4a"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@add_subdirectory(style)@#add_subdirectory(style)@' src/CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "qgnomeplatform",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_INSTALL_PREFIX=/usr/share/runtime/lib/plugins/QGnomePlatform",
                            "-DQT_PLUGINS_DIR=/usr/share/runtime/lib/plugins/QGnomePlatform",
                            "-DDISABLE_DECORATION_SUPPORT=true"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FedoraQt/QGnomePlatform/archive/refs/tags/0.8.0.tar.gz",
                    "sha256": "b95d38558dd1f1af9099985d432973cad0d6dcb00d069451862ea89b2b1443f5"
                },
                {
                    "type": "patch",
                    "path": "qgnomeplatform-adwaita-include-dirs.patch"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.kde.PlatformTheme.QGnomePlatform.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.kde.PlatformTheme.QGnomePlatform --prefix=${FLATPAK_DEST} --origin=flatpak org.kde.PlatformTheme.QGnomePlatform"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.kde.PlatformTheme.QGnomePlatform.appdata.xml"
                }
            ]
        }
    ]
}
